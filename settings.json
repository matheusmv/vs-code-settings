{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "redhat.telemetry.enabled": false,

    // Editor and breadcrumbs
    "editor.fontSize": 16,
    "editor.fontFamily": "'Fira Code'",
    "editor.minimap.enabled": false,
    "editor.fontLigatures": false,
    "editor.formatOnSave": false,
    "editor.cursorBlinking": "smooth",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll": true
    },
    "editor.suggestSelection": "first",
    "editor.snippetSuggestions": "bottom",

    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "'FiraMono Nerd Font'",
    "terminal.integrated.tabs.enabled": true,

    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Base16 Default Dark",
    "workbench.iconTheme": "material-icon-theme",

    // liveserver
    "liveServer.settings.donotVerifyTags": true,

    // Debug
    "debug.console.fontSize": 18,

    // Files and search
    "files.defaultLanguage": "{activeEditorLanguage}",
    "files.exclude": {
        "USE_GITIGNORE": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/coverage": true,
        "**/dist": true,
        "**/build": true,
        "**/.build": true,
        "**/.gh-pages": true
    },

    // Javascript & TypeScript
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrapColumn": 100,
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.suggestSelection": "recentlyUsed",
        "editor.suggest.showKeywords": false
    },

    "javascript.autoClosingTags": true,
    "javascript.validate.enable": false,
    "javascript.suggest.autoImports": true,
    "javascript.format.semicolons": "insert",
    "javascript.preferences.quoteStyle": "single",
    "javascript.suggest.completeFunctionCalls": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.format.insertSpaceAfterCommaDelimiter": true,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,

    "typescript.suggest.autoImports": true,
    "typescript.preferences.quoteStyle": "single",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.format.insertSpaceAfterCommaDelimiter": true,
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": true,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,

    "[javascriptreact]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrapColumn": 100,
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.suggestSelection": "recentlyUsed",
        "editor.suggest.showKeywords": false
    },

    "eslint.format.enable": true,

    // Python
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "python.formatting.autopep8Args": [
        "--indent-size=4"
        // "--ignore=E111",
    ],
    "python.linting.flake8Args": [
        // "--ignore=E111",
    ],
    "python.linting.pylintArgs": [
        "--load-plugins=pylint_django",
        "--errors-only"
    ],
    "python.pythonPath": "/bin/python3.9",
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.testing.unittestEnabled": true,

    // Go
    "[go]": {
        "editor.tabSize": 8,
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
    },

    // C
    "[c]": {
        "editor.tabSize": 8,
        "editor.rulers": [79],
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.detectIndentation": false,
        "editor.wordBasedSuggestions": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.defaultFormatter": "ms-vscode.cpptools",
    },

    "C_Cpp.formatting": "vcFormat",

    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.default.includePath": ["${workspaceFolder}/**"],
    "C_Cpp.default.browse.path": ["${workspaceFolder}"],
    "C_Cpp.default.compilerPath": "/usr/bin/gcc",
    "C_Cpp.default.browse.databaseFilename": "",
    
    "C_Cpp.vcFormat.indent.accessSpecifiers": true,
    "C_Cpp.vcFormat.indent.caseContents": true,
    "C_Cpp.vcFormat.indent.caseContentsWhenBlock": true,
    "C_Cpp.vcFormat.indent.preprocessor": "leftmostColumn",
    "C_Cpp.vcFormat.indent.withinParentheses": "alignToParenthesis",
    
    "C_Cpp.vcFormat.newLine.beforeElse": false,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.type": "ignore",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",
    "C_Cpp.vcFormat.newLine.scopeBracesOnSeparateLines": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    
    "C_Cpp.vcFormat.space.groupSquareBrackets": true,
    "C_Cpp.vcFormat.space.aroundBinaryOperator": "insert",
    "C_Cpp.vcFormat.space.aroundTernaryOperator": "insert",
    "C_Cpp.vcFormat.space.afterCastCloseParenthesis": true,
    "C_Cpp.vcFormat.space.pointerReferenceAlignment": "right",
    "C_Cpp.vcFormat.space.aroundAssignmentOperator": "insert",
    "C_Cpp.vcFormat.space.beforeInitializerListOpenBrace": true,
    "C_Cpp.vcFormat.space.beforeFunctionOpenParenthesis": "remove",
}
